# ==================== SERVER CONFIGURATION ====================
PORT=5000
NODE_ENV=development

# ==================== DATABASE CONFIGURATION ====================
# Local MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/plantify-backend

# MongoDB Atlas (Cloud) - Replace with your connection string
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/plantify-backend?retryWrites=true&w=majority

# ==================== JWT & AUTHENTICATION ====================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex
JWT_EXPIRE=30d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key_here

# ==================== FIREBASE CONFIGURATION ====================
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456789
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ==================== FILE UPLOAD CONFIGURATION ====================
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_DIR=uploads

# ==================== EMAIL CONFIGURATION ====================
# Gmail SMTP
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# SendGrid (Alternative)
# SENDGRID_API_KEY=your_sendgrid_api_key
# FROM_EMAIL=noreply@plantify.com

# ==================== PAYMENT GATEWAY ====================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# JazzCash/EasyPaisa (Pakistan)
JAZZCASH_MERCHANT_ID=your_merchant_id
JAZZCASH_PASSWORD=your_merchant_password
JAZZCASH_RETURN_URL=http://localhost:3000/payment/success

# ==================== AI/ML SERVICES ====================
# OpenAI API
OPENAI_API_KEY=sk-your_openai_api_key

# Google Cloud Vision API
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Plant.id API
PLANT_ID_API_KEY=your_plant_id_api_key

# ==================== MAP & LOCATION SERVICES ====================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# ==================== SOCIAL MEDIA APIS ====================
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ==================== CLOUD STORAGE ====================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=plantify-uploads

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==================== NOTIFICATION SERVICES ====================
# FCM (Firebase Cloud Messaging)
FCM_SERVER_KEY=your_fcm_server_key

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==================== ANALYTICS & MONITORING ====================
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ==================== REDIS CACHE ====================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ==================== CORS CONFIGURATION ====================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==================== API RATE LIMITING ====================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ==================== SESSION CONFIGURATION ====================
SESSION_SECRET=your_session_secret_key_here
COOKIE_DOMAIN=localhost

# ==================== ENCRYPTION KEYS ====================
CRYPTO_SECRET_KEY=your_32_character_secret_key_here

# ==================== THIRD PARTY INTEGRATIONS ====================
# Weather API
WEATHER_API_KEY=your_weather_api_key

# Plant Disease Detection
PLANTVILLAGE_API_KEY=your_plantvillage_api_key

# ==================== LOGGING ====================
LOG_LEVEL=info
LOG_FORMAT=combined

# ==================== BACKUP CONFIGURATION ====================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
